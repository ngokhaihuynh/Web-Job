@{
    ViewBag.Title = "Xác nhận";
}

<div  class="confirmation-container">
    <h2>Xác nhận</h2>
    <p>@TempData["SuccessMessage"]</p>
    <a href="@Url.Action("Index", "HomeEm")" class="btn btn-primary">Quay lại trang chủ</a>
</div>

<style>

    /* Định dạng chính cho container */
.confirmation-container {
    max-width: 600px; /* Giới hạn chiều rộng tối đa */
    margin: 50px auto; /* Căn giữa container */
    padding: 20px;
    background-color: #f9f9f9; /* Màu nền nhẹ */
    border: 1px solid #ddd; /* Viền mỏng */
    border-radius: 10px; /* Góc bo tròn */
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Hiệu ứng đổ bóng */
    text-align: center; /* Căn giữa nội dung */
    font-family: Arial, sans-serif; /* Font mặc định */
}

/* Tiêu đề */
.confirmation-container h2 {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 15px;
    color: #333; /* Màu chữ */
}

/* Đoạn văn */
.confirmation-container p {
    font-size: 16px;
    color: #555;
    margin-bottom: 20px;
    line-height: 1.5;
}

/* Nút */
.confirmation-container .btn {
    display: inline-block;
    padding: 10px 20px;
    font-size: 16px;
    color: #fff; /* Màu chữ */
    background-color: #007bff; /* Màu nền nút */
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s ease; /* Hiệu ứng chuyển đổi màu */
}

.confirmation-container .btn:hover {
    background-color: #0056b3; /* Màu nền khi hover */
}

/* Responsive */
@@media (max-width: 768px) {
    .confirmation-container {
        padding: 15px; /* Giảm padding trên thiết bị nhỏ */
        margin: 30px 10px; /* Khoảng cách hai bên nhỏ hơn */
    }

    .confirmation-container h2 {
        font-size: 20px; /* Giảm kích thước chữ */
    }

    .confirmation-container p {
        font-size: 14px;
    }

    .confirmation-container .btn {
        font-size: 14px;
        padding: 8px 15px;
    }
}

@@media (max-width: 480px) {
    .confirmation-container {
        padding: 10px;
    }

    .confirmation-container h2 {
        font-size: 18px;
    }

    .confirmation-container p {
        font-size: 12px;
    }

    .confirmation-container .btn {
        font-size: 12px;
        padding: 6px 10px;
    }
}

</style>