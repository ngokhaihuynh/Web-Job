@model List<WebJob.Models.EF.Message>

<h2>Chat với @Model.FirstOrDefault()?.SenderID</h2>

<div id="discussion">
    @foreach (var message in Model)
    {
        <div class="message">
            <strong>@message.SenderID:</strong>
            <span>@message.Content</span>
            <br />
            <small>@message.Timestamp.ToString("HH:mm:ss dd/MM/yyyy")</small>
            <hr />
        </div>
    }
</div>

<form method="post" action="@Url.Action("SendMessage", "Message")">
    <input type="hidden" name="receiverId" value="@Model.FirstOrDefault()?.SenderID" />
    <textarea name="content" required></textarea>
    <button type="submit">Gửi tin nhắn</button>
</form>
