@model WebJob.Models.EF.Salary

@{
    ViewBag.Title = "Thêm mới mức lương";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm mới mức lương</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Salary", new { area = "Admin" })">Mức lương</a></li>
                    <li class="breadcrumb-item active">Thêm mới</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Nhập thông tin mức lương</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Create", "Salary", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label>Tên mức lương:</label>
                    @Html.TextBoxFor(m => m.SalaryRange, new { @class = "form-control", placeholder = "Nhập tên mức lương" })
                    @Html.ValidationMessageFor(m => m.SalaryRange, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label>Nhỏ nhất từ:</label>
                    @Html.TextBoxFor(m => m.SalaryMin, new { @class = "form-control", placeholder = "Nhập lương nhỏ nhất", type = "number" })
                    @Html.ValidationMessageFor(m => m.SalaryMin, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label>Đến:</label>
                    @Html.TextBoxFor(m => m.SalaryMax, new { @class = "form-control", placeholder = "Nhập lương lớn nhất", type = "number" })
                    @Html.ValidationMessageFor(m => m.SalaryMax, "", new { @class = "text-danger" })
                </div>

                <button type="submit" class="btn btn-success">Thêm mới</button>
                <a href="@Url.Action("Index", "Salary", new { area = "Admin" })" class="btn btn-secondary">Quay lại</a>
            }
        </div>
    </div>
</section>
