@model WebJob.Models.EF.JobSkill
@{
    ViewBag.Title = "Cập nhật kỹ năng công việc";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <h2>Cập nhật kỹ năng công việc</h2>
    @using (Html.BeginForm("Edit", "Skill", FormMethod.Post))
    {
        @Html.AntiForgeryToken();
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.JobSkillID)

        <div class="form-group">
            <label for="JobSkillName">Tên kỹ năng</label>
            @Html.TextBoxFor(model => model.JobSkillName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.JobSkillName)
        </div>
        <div class="form-group">
            <label for="JobID">Job ID</label>
            @Html.TextBoxFor(model => model.JobID, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.JobID)
        </div>
        <button type="submit" class="btn btn-primary">Cập nhật</button>
    }
</section>
