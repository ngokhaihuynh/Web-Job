@model IEnumerable<WebJob.Models.EF.Order>
@{
    ViewBag.Title = "Danh sách đơn hàng của tôi";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}

<div class="container mt-4">
    <div class="order-list">
        <h2 class="text-center mb-4">Danh sách đơn hàng</h2>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-primary">
                    <tr>
                        <th>#</th>
                        <th>Mã đơn hàng</th>
                        <th>Ngày tạo</th>
                        <th>Trạng thái</th>
                        <th>Tổng tiền</th>
                        <th>Hình thức thanh toán</th>
                        <th>Chi tiết</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        int index = 1;
                        foreach (var order in Model)
                        {
                            <tr>
                                <td>@index</td>
                                <td>@order.Code</td>
                                <td>@order.CreatedDate.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    @if (order.Status == 1)
                                    {
                                        <span class="badge bg-warning text-dark">Chưa thanh toán</span>
                                    }
                                    else if (order.Status == 2)
                                    {
                                        <span class="badge bg-success">Đã thanh toán</span>
                                    }
                                </td>
                                <td>@order.TotalAmount.ToString("#,###")</td>
                                <td>
                                    @if (order.TypePayment == 1)
                                    {
                                        <span class="badge bg-secondary">COD</span>
                                    }
                                    else if (order.TypePayment == 2)
                                    {
                                        <span class="badge bg-info text-dark">Chuyển khoản</span>
                                    }
                                </td>
                                <td>
                                    <a href="@Url.Action("OrderDetails", "ShoppingCart", new { id = order.OrderID })" class="btn btn-primary btn-sm">
                                        Xem chi tiết
                                    </a>
                                </td>
                            </tr>
                            index++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center">Không có đơn hàng nào.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<style>
    .order-list {
    background-color: #fff;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

h2 {
    font-size: 1.8rem;
    font-weight: bold;
    color: #333;
}

.table {
    margin-top: 15px;
}

.table th, .table td {
    text-align: center;
    vertical-align: middle;
}

.table th {
    background-color: #007bff;
    color: #fff;
    font-weight: bold;
}

.badge {
    padding: 5px 10px;
    font-size: 0.9rem;
    border-radius: 0.25rem;
}

.btn-sm {
    font-size: 0.85rem;
    padding: 5px 10px;
}

@@media (max-width: 768px) {
    .order-list {
        padding: 10px;
    }

    h2 {
        font-size: 1.5rem;
    }

    .table th, .table td {
        font-size: 0.85rem;
    }
}

</style>