@model WebJob.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Đặt lại mật khẩu";
    Layout = Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="login-header">
    <div class="w-login m-auto">
        <div class="login-logo">
            <h3>
                <!-- <a href="#">Tech<span class="txb-logo">Jobs.</span></a> -->
                <a href="#">
                    <img src="~/Content/assets/img/logojobtran.png">
                </a>
            </h3>
            <span class="login-breadcrumb"><em>/</em> Đặt lại mật khẩu</span>
        </div>
        <div class="login-right">
            <a href="/home" class="btn btn-return">Quay lại trang chủ</a>
        </div>
    </div>
</div>



<div class="row">
    <div class="col-md-2"></div>
    <div style="margin-top:90px" class="col-md-8">


        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4>Đặt lại mật khẩu</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Code)
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @*@Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })\*@
                <label style="margin-left: 15px">Mật khẩu</label>
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @*@Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })*@
                <label style="margin-left: 15px">Nhập lại mật khẩu</label>
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @*<input type="submit" class="btn btn-default" value="Reset" />*@
                    <button type="submit" class="btn btn-sm btn-success" value="Reset">Đặt lại</button>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
